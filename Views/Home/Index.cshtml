@{
    ViewBag.Title = "Home Page";
}




@*invoice changes*@
<style>
    tbody {
        min-height: 200px;
      /*  height: 200px;*/
        max-height: 300px;
        overflow-y:scroll;
    }

    button {
        margin-top: 5px;
    }

    select {
        width: 100%;
    }

    td, th {
        border: 1px solid #ccc;
        padding: 8px;
    }
</style>





<div class="row m-0">
    <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="col-lg-4 col-md-6 col-sm-12">
            <label class="font-weight-bold">
                Invoice Number :
            </label>
            <input type="text" class="form-control form-control-sm" id="txtBxInvoiceNo" />
        </div>
        <div class="col-lg-4 col-md-6 col-sm-12">
            <label class="font-weight-bold">
                Invoice Date :
            </label>
            <input type="date" class="form-control form-control-sm" id="dtPckrInvoice" />
        </div>
        <div class="col-lg-4 col-md-6 col-sm-12">
            <label class="font-weight-bold">
                Party Name :
            </label>
            <select name="" id="drpPrtyNme" class="form-control">
                <option value="1">Volvo</option>
                <option value="2">Saab</option>
                <option value="3">Mercedes</option>
                <option value="4">Audi</option>
            </select>
        </div>

    </div>

    <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="col-lg-4 col-md-6 col-sm-12">
            <label class="font-weight-bold">
                GST No:
            </label>
            <label class="font-weight-bold" id="lblGst">
            </label>
        </div>
        <div class="col-lg-4 col-md-6 col-sm-12">
            <label class="font-weight-bold">
                Contact :
            </label>
            <label class="font-weight-bold" id="lblContct">
            </label>
        </div>
    </div>
</div>
<hr />


<div class="col-lg-4 col-md-6 col-sm-12">
    <button id="addRowButton">Add Row</button>
</div>

    @*<button id="saveButton">Save</button>*@

<br />
<br />
<div class="row m-0 ">
    <table border="1" class="col-lg-12" id="Invoicegrid">
        <thead>
            <tr>
                <th>Sr.No.</th>
                <th>Item Code</th>
                <th>Item Name</th>
                <th>Rate</th>
                <th>Qty.</th>
                <th>GST % 18</th>
                <th>Total</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>
</div>

<hr />
<div class="row m-0 ">
    <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="col-lg-4 col-md-6 col-sm-12">
            <label class="font-weight-bold"  >
                Grand Total :
            </label>
            <label class="font-weight-bold" id="lblGrndAmnt">
            </label>
        </div>
        <div class="col-lg-4 col-md-6 col-sm-12">
            <label class="font-weight-bold">
                Discount :
            </label>
            <input type="text" class="form-control form-control-sm" id="txtBxDscnt" />
        </div>
        <div class="col-lg-4 col-md-6 col-sm-12">
            <label class="font-weight-bold">
                GST Amount:
            </label>
            <label class="font-weight-bold" id="lblGstAmnt">

            </label>
        </div>

    </div>
    <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="col-lg-4 col-md-6 col-sm-12">
            <label class="font-weight-bold">
                Net Amount :
            </label>
            <label class="font-weight-bold" id="lblNetAmnt">

            </label>
        </div>
        <div class="col-lg-4 col-md-6 col-sm-12">
            <button class="btn-default" id="calculate">Calculate </button>
        </div>
    </div>

</div>
<script src="~/Scripts/invoice.js"></script>